<%- include ('../partials/header')%>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New Comment to <%= article.title %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/news/<%= article._id %>/comments" method="POST">
                <div class="form-group">
                    <input type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button>Submit!</button>
                </div>
            </form>
            <a href="/news/<%= article._id %>">Go Back</a>
        </div>
    </div>
</div>
<%- include ('../partials/footer')%>
