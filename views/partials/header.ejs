<body>
<!-- header begins -->

	<div class="hamburger-menu">
		<input id="menu__toggle" type="checkbox" />
		<label class="menu__btn" for="menu__toggle">
		  <span></span>
		</label>
	
		<ul class="menu__box">
			<li><a class="brand" href="/"><span class="cher_span">Cher</span>News</a><li></li>
			<% if(!currentUser){ %>
				<li class="<%= typeof page !== 'undefined' && page === 'login' ? 'nav-active' : '' %>"><a class="menu__item" href="/login">Log in</a></li>
				<li class="<%= typeof page !== 'undefined' && page === 'register' ? 'nav-active' : '' %>"><a class="menu__item" class="sign_in" href="/register">Sign up</a></li>
			<% } else { %>
				<li><a class="menu__item" href="#">Signed in as <%= currentUser.username %></a></li>
				<li><a class="menu__item" href="/logout">Log out</a></li>
			<% } %>
		</ul>
	</div>

<!-- header ends -->

